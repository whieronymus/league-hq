---
layout: layouts/page.njk
pagination:
  data: teams.all
  size: 1
  alias: team
permalink: "/teams/{{ team.current_slug }}/"
eleventyComputed:
  title: "{{ team.name }}"
---
<article class="p-6 bg-surface rounded-xl border border-slate-700">
  <header class="flex items-center gap-6 mb-6">
    <img src="{{ '/assets/img/teams/' | url }}{{ team.team_id }}/logo.png" alt="{{ team.logo.alt or (team.name + ' logo') }}" class="w-24 h-24 object-cover rounded-xl">
    <div>
      <h1 class="text-3xl font-semibold">{{ team.name }}</h1>
      <p class="text-slate-300">{{ team.tagline }}</p>
    </div>
  </header>

  <section class="grid md:grid-cols-2 gap-6">
    <div class="bg-bg rounded-xl border border-slate-700 p-4">
      <h2 class="text-xl font-medium mb-2">Manager</h2>
      <dl class="space-y-1 text-sm">
        <div><dt class="inline text-slate-300">Name:</dt> <dd class="inline">{{ team.manager.name }}</dd></div>
        <div><dt class="inline text-slate-300">Username:</dt> <dd class="inline">{{ team.manager.username }}</dd></div>
        <div><dt class="inline text-slate-300">User ID:</dt> <dd class="inline">{{ team.manager.user_id }}</dd></div>
        <div><dt class="inline text-slate-300">Vibe:</dt> <dd class="inline">{{ team.manager.vibe }}</dd></div>
      </dl>
    </div>

    <div class="bg-bg rounded-xl border border-slate-700 p-4">
      <h2 class="text-xl font-medium mb-2">Allegiances</h2>
      <p class="text-sm"><span class="text-slate-300">Favorite:</span> {{ team.favorite_team }}</p>
      <p class="text-sm"><span class="text-slate-300">Least Favorite:</span> {{ team.least_favorite_team }}</p>
      {% if team.claims and team.claims.length %}
      <h3 class="mt-3 font-medium">Claims</h3>
      <ul class="list-disc list-inside text-sm">
        {% for c in team.claims %}<li>{{ c }}</li>{% endfor %}
      </ul>
      {% endif %}
    </div>
  </section>
</article>
